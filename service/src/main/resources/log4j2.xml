<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%X{requestId}] [%t] %-5level %logger{36} -- %msg%n" />
        </Console>
        <!-- <File name="MyFile" fileName="${sys:catalina.base}/logs/server.log">
        <File name="MyFile" fileName="C:\logs\server.log">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%X{requestId}] [%t] %-5level %logger{36} - %msg%n"/>
        </File>-->
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" level="info"/>
            <!-- <AppenderRef ref="MyFile" level="info"/> -->
        </Root>
    </Loggers>
</Configuration>